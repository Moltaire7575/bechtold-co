---
const links = [
	{ href: '/', label: 'Home' },
	{ href: '/library', label: 'Library' },
	{ href: '/research', label: 'Research' },
	{ href: '/ancient-wisdom', label: 'Ancient Wisdom' },
	{ href: '/expeditions', label: 'Expeditions' },
	{ href: '/coaching', label: 'Coaching' },
];
---

<header class="sticky top-0 z-50 border-b border-white/5 bg-bg/70 backdrop-blur supports-[backdrop-filter]:bg-bg/50">
	<div class="mx-auto flex h-16 max-w-6xl items-center justify-between px-4">
		<a href="/" class="flex items-center gap-2 font-display text-lg tracking-tight">
			<span class="inline-block h-2 w-2 rounded-full bg-accent-gold shadow-[0_0_24px_rgba(198,167,94,0.35)]" />
			<span>bechtold.co</span>
		</a>

		<nav class="hidden items-center gap-6 text-sm text-text-muted md:flex">
			{links.map((l) => (
				<a class="transition hover:text-text" href={l.href}>{l.label}</a>
			))}
		</nav>

		<div class="flex items-center gap-3">
			<a
				href="/library"
				class="hidden rounded-full border border-white/10 bg-panel px-4 py-2 text-sm text-text-muted transition hover:border-white/20 hover:text-text md:inline-flex"
			>
				Search
			</a>
			<a
				href="/signin"
				class="inline-flex items-center rounded-full bg-white px-4 py-2 text-sm font-medium text-black transition hover:bg-white/90"
			>
				Sign in
			</a>
		</div>
	</div>
</header>
