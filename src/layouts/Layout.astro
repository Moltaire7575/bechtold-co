---
import '../styles/globals.css';
import Nav from '../components/Nav.astro';

export type Props = {
	title?: string;
	description?: string;
};

const {
	title = 'bechtold.co — Cinematic Scholar',
	description =
		'A premium library of performance training, physiology, and philosophy—built as a self-experiment.',
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Space+Grotesk:wght@500;600&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body>
		<div class="min-h-screen">
			<Nav />
			<main>
				<slot />
			</main>
			<footer class="mt-20 border-t border-white/5 py-10">
				<div class="mx-auto max-w-6xl px-4 text-sm text-text-muted">
					© {new Date().getFullYear()} bechtold.co — Cinematic Scholar
				</div>
			</footer>
		</div>
	</body>
</html>
