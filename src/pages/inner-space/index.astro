---
import Layout from "../../layouts/Layout.astro";
import InnerSpaceCard from "../../components/InnerSpaceCard.astro";
import InnerSpaceFeatured from "../../components/InnerSpaceFeatured.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("inner-space", ({ data }) => !data.draft))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const [featured, ...rest] = posts;

const fmt = (d) =>
  d.toLocaleDateString("en-US", { year: "numeric", month: "short", day: "numeric" });
---

<Layout title="Inner Space Journey — bechtold.co">
  <!-- Cinematic hero -->
  <section class="relative overflow-hidden">
    <div class="absolute inset-0">
      <img
        src="/images/site/inner-space-hero.png"
        alt=""
        class="h-full w-full object-cover opacity-85"
        loading="eager"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-black/85 via-black/55 to-black"></div>
    </div>

    <div class="relative mx-auto max-w-6xl px-5 pb-10 pt-14 md:pb-12 md:pt-20">
      <p class="text-xs uppercase tracking-[0.18em] text-white/70">Series</p>
      <h1 class="mt-4 text-4xl font-semibold text-white md:text-6xl">Inner Space Journey</h1>
      <p class="mt-5 max-w-3xl text-lg text-white/75">
        Deep, lived experience—written like a journal entry. One idea, one practice.
        Cinematic, grounded, and usable.
      </p>
    </div>
  </section>

  <!-- Content -->
  <section class="bg-black">
    <div class="mx-auto max-w-6xl px-5 py-10">
      <div class="grid gap-5 md:grid-cols-[1.3fr_0.7fr] md:items-end">
        <div>
          <p class="text-sm text-white/70">
            Short, publishable entries. Clear protocols. The inner work that survives real life.
          </p>
        </div>

        <div class="rounded-3xl border border-white/10 bg-white/5 p-5">
          <div class="text-xs uppercase tracking-[0.18em] text-white/60">How to use this</div>
          <ul class="mt-3 space-y-2 text-sm text-white/75">
            <li><span class="text-white/90">1 idea</span> per entry</li>
            <li><span class="text-white/90">1 practice</span> you can actually do</li>
            <li><span class="text-white/90">Tags</span> for future filtering</li>
          </ul>
        </div>
      </div>

      {featured && (
        <div class="mt-10">
          <InnerSpaceFeatured
            href={`/inner-space/${featured.slug}`}
            id={featured.data.id}
            title={featured.data.title}
            subtitle={featured.data.subtitle}
            date={fmt(featured.data.date)}
            excerpt={featured.data.excerpt}
            tags={featured.data.tags}
            heroImage={featured.data.heroImage}
          />
        </div>
      )}

      <div class="mt-8 grid gap-5 sm:grid-cols-2 lg:grid-cols-3">
        {rest.map((post) => (
          <InnerSpaceCard
            href={`/inner-space/${post.slug}`}
            id={post.data.id}
            title={post.data.title}
            subtitle={post.data.subtitle}
            date={fmt(post.data.date)}
            excerpt={post.data.excerpt}
            tags={post.data.tags}
            heroImage={post.data.heroImage}
          />
        ))}
      </div>
    </div>
  </section>
</Layout>
