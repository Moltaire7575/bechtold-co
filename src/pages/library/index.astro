---
import Layout from "../../layouts/Layout.astro";
import VideoCard from "../../components/VideoCard.astro";

// TODO: Replace mock with Supabase query (videos + tags) once env vars are set.
const mockVideos = Array.from({ length: 24 }).map((_, i) => ({
  title: `Episode ${i + 1} — Precision, Performance, Philosophy`,
  duration: `${10 + i}m`,
  difficulty: (i % 5) + 1,
  pillar: (["Body", "Mind", "Spirit", "Research", "Expeditions", "Experiments"])[i % 6],
  tags: ["Sleep", "Nutrition", "Movement", "Clarity", "Presence"].slice(0, (i % 2) + 1),
  href: `/library/cinematic-scholar-protocol`,
}));
---

<Layout title="Library — bechtold.co">
  <!-- Cinematic hero -->
  <section class="relative overflow-hidden">
    <div class="absolute inset-0">
      <img src="/images/site/library-hero.png" alt="" class="h-full w-full object-cover opacity-85" loading="eager" />
      <div class="absolute inset-0 bg-gradient-to-b from-black/85 via-black/55 to-black"></div>
    </div>
    <div class="relative mx-auto max-w-6xl px-5 pb-10 pt-14 md:pb-12 md:pt-20">
      <p class="text-xs uppercase tracking-[0.18em] text-white/70">Library</p>
      <h1 class="mt-4 text-4xl font-semibold text-white md:text-6xl">Browse</h1>
      <p class="mt-5 max-w-3xl text-lg text-white/75">
        Browse the collection. Filtering/search will be wired to Supabase early (pipeline priority).
      </p>
    </div>
  </section>

  <!-- Body -->
  <section class="bg-black">
    <div class="mx-auto max-w-6xl px-5 py-10">
      <!-- Search -->
      <div class="flex flex-col gap-3 md:flex-row md:items-center md:justify-between">
        <div class="text-sm text-white/70">Search + filters (coming soon)</div>

        <div class="w-full md:w-[420px]">
          <label class="sr-only" for="q">Search</label>
          <input
            id="q"
            name="q"
            placeholder="Search title, description, tags…"
            class="w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-white placeholder:text-white/35 outline-none focus:border-white/20"
          />
        </div>
      </div>

      <div class="mt-10 grid gap-5 md:grid-cols-[260px_1fr]">
        <!-- Filters (dark glass) -->
        <aside class="hidden rounded-3xl border border-white/10 bg-white/5 p-5 md:block">
          <div class="space-y-6">
            <div>
              <div class="text-sm font-medium text-white">Pillar</div>
              <div class="mt-3 flex flex-wrap gap-2">
                {["Body","Mind","Spirit","Research","Expeditions","Experiments"].map((p) => (
                  <span class="rounded-full border border-white/10 bg-black/20 px-3 py-1 text-xs text-white/75">{p}</span>
                ))}
              </div>
            </div>

            <div>
              <div class="text-sm font-medium text-white">Format</div>
              <div class="mt-3 flex flex-wrap gap-2">
                {["Lecture","Workout","Guided","Interview","Documentary","Protocol","Experiment"].map((f) => (
                  <span class="rounded-full border border-white/10 bg-black/20 px-3 py-1 text-xs text-white/75">{f}</span>
                ))}
              </div>
            </div>

            <div>
              <div class="text-sm font-medium text-white">Difficulty</div>
              <div class="mt-3 flex flex-wrap gap-2">
                {[1,2,3,4,5].map((d) => (
                  <span class="rounded-full border border-white/10 bg-black/20 px-3 py-1 text-xs text-white/75">{d}</span>
                ))}
              </div>
            </div></div>
        </aside>

        <!-- Grid -->
        <div>
          <div class="grid grid-cols-2 gap-3 sm:grid-cols-3 lg:grid-cols-4">
            {mockVideos.map((v) => (
              <VideoCard
                href={v.href}
                title={v.title}
                duration={v.duration}
                difficulty={v.difficulty}
                pillar={v.pillar}
                tags={v.tags}
              />
            ))}
          </div>

          <div class="mt-10 rounded-3xl border border-white/10 bg-white/5 p-5">
            <div class="text-xs uppercase tracking-[0.18em] text-white/60">Status</div>
            <p class="mt-2 text-sm text-white/75">
              HOLD: filtering/search and real library data will be wired to the Supabase video database once the schema + ingestion pipeline stabilize.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
