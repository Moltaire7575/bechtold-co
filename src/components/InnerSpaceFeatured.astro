---
const { href, id, title, subtitle, date, excerpt, tags, heroImage } = Astro.props;
---

<a
	href={href}
	class="group relative block overflow-hidden rounded-[2.5rem] border border-white/10 bg-panel/50 transition hover:border-white/20"
>
	<div class="relative">
		{heroImage && (
			<img
				src={heroImage}
				alt=""
				class="h-[360px] w-full object-cover opacity-95 transition group-hover:opacity-100 md:h-[420px]"
				loading="eager"
			/>
		)}
		<div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/30 to-transparent"></div>
		<div class="absolute inset-0 bg-[radial-gradient(circle_at_20%_25%,rgba(47,168,198,0.22),transparent_55%),radial-gradient(circle_at_85%_70%,rgba(105,240,201,0.14),transparent_52%)] opacity-80"></div>

		<div class="absolute bottom-0 left-0 right-0 p-7 md:p-10">
			<div class="flex flex-wrap items-center gap-3">
				<span class="rounded-full border border-white/15 bg-black/30 px-3 py-1 text-xs uppercase tracking-wide text-text-muted">
					Featured
				</span>
				<span class="text-xs uppercase tracking-wide text-text-muted">{id} Â· {date}</span>
			</div>
			<h2 class="mt-4 text-3xl font-semibold tracking-tight text-text md:text-4xl">{title}</h2>
			{subtitle && <div class="mt-3 max-w-2xl text-base text-text-muted md:text-lg">{subtitle}</div>}
			<p class="mt-4 max-w-3xl text-sm text-text-muted md:text-base">{excerpt}</p>
			<div class="mt-6 flex flex-wrap gap-2">
				{tags?.slice(0, 6).map((t) => (
					<span class="rounded-full border border-white/10 bg-black/25 px-3 py-1 text-xs text-text-muted">
						{t}
					</span>
				))}
			</div>
		</div>
	</div>

	<div class="pointer-events-none absolute inset-0 opacity-0 transition group-hover:opacity-100">
		<div class="absolute -inset-px rounded-[2.5rem] bg-gradient-to-r from-cyan-400/25 via-white/5 to-emerald-300/25"></div>
	</div>
</a>
